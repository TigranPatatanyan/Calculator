<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_math"
            style="@style/TextView"
            android:ellipsize="start" />

        <TextView
            android:id="@+id/tv_result"
            style="@style/TextView"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:onClick="acButton"
                android:id="@+id/btn_ac"
                style="@style/Button"
                android:text="A/C" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_bacagic"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="(" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_pakagic"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text=")" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_bazhanac"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:onClick="setText"
                android:id="@+id/btn_7"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="7" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_8"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="8" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_9"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="9" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_bazmapatkac"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:onClick="setText"
                android:id="@+id/btn_4"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="4" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_5"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="5" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_6"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="6" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_minus"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:onClick="setText"
                android:id="@+id/btn_1"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="1" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_2"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="2" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_3"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="3" />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_plus"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:onClick="setText"
                android:id="@+id/btn_."
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="." />

            <Button
                android:onClick="setText"
                android:id="@+id/btn_0"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="0" />

            <Button
                android:onClick="backButton"
                android:id="@+id/btn_back"
                style="@style/Button"
                android:background="@drawable/number_buttons"
                android:text="@string/back" />

            <Button
                android:onClick="equals"
                android:id="@+id/btn_equals"
                style="@style/Button"
                android:background="@drawable/action_buttons"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>